<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :task, placeholder: "eg. Update Buttons on the App" %>
    <%= f.input :details, placeholder: "eg. Add some color to the buttons. Maybe green for create and red for delete." %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
